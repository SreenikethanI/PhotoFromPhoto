<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Photo_from_photo"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <GridLength x:Key="MainWindowPadding">10</GridLength>

        <Style x:Key="Dark" TargetType="Window">
            <Setter Property="Foreground" Value="Gainsboro" />
            <Setter Property="Background" Value="#FF1C1C1C" />
            <Style.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="Foreground" Value="Gainsboro" />
                    <Setter Property="Background" Value="#FF5A5A5A" />
                </Style>
                <Style TargetType="Button">
                    <Setter Property="Foreground" Value="Gainsboro" />
                    <Setter Property="Background" Value="#FF7F7F7F" />
                </Style>
                <Style TargetType="RadioButton">
                    <Setter Property="Foreground" Value="Gainsboro" />
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
